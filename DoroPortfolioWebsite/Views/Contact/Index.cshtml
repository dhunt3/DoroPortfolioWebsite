<!--Index view page from my Contact controller-->
@{
    ViewBag.Title = "Index";
}

<h2 class="pageHeader">Contact Me</h2>

<div class="container-fluid">
    <div class="row">
        <!--Contact form I found online that goes with the ContactMe.js file, jqBootstrapValidation.js and ContactMe.php file-->
        <!--jqBootstrapValidation library looks at input and textarea tags and automatically puts validation if needed. 
            For example if there is a “required” attribute, it automatically will put error message if the field is empty.-->
        <p>Contact Form</p>
        <div class="col-md-5">
            <form name="sentMessage" class="well" id="contactForm" novalidate>
                <p>Contact me</p>
                <div class="control-group">
                    <div class="controls">
                        <input type="text" class="form-control"
                               placeholder="Full Name" id="name" required
                               data-validation-required-message="Please enter your name" />
                        <p class="help-block"></p>
                    </div>
                </div>
                <br />
                <div class="control-group">
                    <div class="controls">
                        <input type="email" class="form-control" placeholder="Email"
                               id="email" required
                               data-validation-required-message="Please enter your email" />
                    </div>
                </div>
                <br />
                <div class="control-group">
                    <div class="controls">
                        <textarea rows="10" cols="100" class="form-control"
                                  placeholder="Message" id="message" required
                                  data-validation-required-message="Please enter your message" minlength="5"
                                  data-validation-minlength-message="Min 5 characters"
                                  maxlength="999" style="resize:none"></textarea>
                    </div>
                </div>
                <br />
                <div id="success"> </div> <!-- For success/fail messages -->
                <button type="submit" class="btn btn-primary pull-left">Send</button>
            </form>
        </div>
        <!--Social media links-->
        <div class="col-md-6 col-md-push-1">
            <p>Social Media Links</p>
            <ul style="list-style-type: none">
                <li>
                    <p><img src="~/Content/Images/githubpic.png" width="50" /> GitHub: <a href="https://www.github.com/dhunt3">https://www.github.com/dhunt3</a></p>
                </li>
                <li>
                    <p><img src="~/Content/Images/codeeval.jpg" width="50" /> Codeeval: <a href="https://www.codeeval.com/profile/dhunt3">https://www.codeeval.com/profile/dhunt3</a></p>
                </li>
                <li>
                    <p><img src="~/Content/Images/LinkedIn icon.jpg" width="50" /> LinkedIn: <a href="https://www.linkedin.com/in/dhunt3">https://www.linkedin.com/in/dhunt3</a></p>
                </li>
            </ul>
        </div>
    </div>
    <!--Picture of welcome code-->
    <div class="row">
        <div class="col-md-6 col-md-offset-5">
            <img src="~/Content/Images/Welcome.PNG" />
        </div>
    </div>
</div>
<!--scripts below connect my page to my scripts so that it goes through the validation process of my contact me form-->
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="~/Scripts/jqBootstrapValidation.js"></script>
<script type="text/javascript" src="~/Scripts/contactMe.js"></script>
