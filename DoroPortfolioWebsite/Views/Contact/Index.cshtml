<h2 class="pageHeader">Contact Me</h2>

<div class="container-fluid">
    <div class="row">
        <p>Contact Form</p>
        <div class="col-md-5">
            <form class="well" id="contactForm" name="sentMessage" novalidate="">
                Contact me
                <!-- Full Name -->
                <div class="control-group">
                    <div class="controls">
                        <input class="form-control" id="name" type="text" placeholder="Full Name" required="" data-validation-required-message="Please enter your name" />

                    </div>
                </div>
                <br />
                <!-- Email -->
                <div class="control-group">
                    <div class="controls">
                        <input class="form-control" id="email" type="email" placeholder="Email" required="" data-validation-required-message="Please enter your email" />
                    </div>
                </div>
                <br />
                <!--Message -->
                <div class="control-group">
                    <div class="controls">
                        <textarea rows="10" cols="100" class="form-control"
                                  placeholder="Message" id="message" required
                                  data-validation-required-message="Please enter your message" minlength="5"
                                  data-validation-minlength-message="Min 5 characters"
                                  maxlength="999" style="resize:none"></textarea>
                    </div>
                </div>
                <br />
                <div id="success"></div>
                <!-- For success/fail messages -->
                <button class="btn btn-primary pull-left" type="submit">Send</button>

            </form>
